[Unit]
Description=Daily GTFS Data Update Timer
Documentation=https://github.com/your-username/bus-arrival-notifier

[Timer]
# Run at 4:00 AM every day
OnCalendar=*-*-* 04:00:00
# Add randomized delay up to 5 minutes to avoid thundering herd
RandomizedDelaySec=300
Persistent=true

[Install]
WantedBy=timers.target
